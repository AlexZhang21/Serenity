        body {
            padding-top: 60px; /* 给主内容留出空间，避免被固定框覆盖 */
        }

        /* 自动滚动区域的样式 */
        .scroll-container {
            background-color: rgb(120, 197, 230); /* 蓝色背景 */
            color: white; /* 白色文本 */
            width: 100%; /* 全宽 */
            height: 50px; /* 固定高度 */
            overflow: hidden; /* 隐藏溢出的内容 */
            position: relative; /* 相对定位容器 */
            margin-top: 20px; /* 与其他内容有些间距 */
        }

        /* 滚动内容的样式 */
        .scroll-text {
            position: absolute;
            white-space: nowrap; /* 防止文本换行 */
            display: flex; /* 使用flex布局来让图片和文字在同一行 */
            align-items: center; /* 垂直居中对齐 */
            animation: scroll 20s linear infinite; /* 滚动动画，20秒循环 */
            font-size: 30px; /* 设置滚动文字的字体大小 */
        }

        /* 滚动动画的关键帧 */
        @keyframes scroll {
            0% {
                transform: translateX(100%); /* 从右边开始 */
            }
            100% {
                transform: translateX(-100%); /* 移动到左边外 */
            }
        }

        /* 滚动图片的样式 */
        .scroll-text img {
            vertical-align: middle; /* 图片和文字垂直对齐 */
            margin-right: 10px; /* 图片与文字之间的间距 */
            height: 40px; /* 调整图片高度 */
            width: auto; /* 保持图片的宽高比 */
        }

    </style>
